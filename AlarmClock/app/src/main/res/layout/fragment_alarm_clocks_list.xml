<android.gesture.GestureOverlayView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="cats.wants.meow.alarmclock.fragments.AlarmClocksListFragment"
    android:id="@+id/gesture_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gestureColor="#20000000"
    android:uncertainGestureColor="#00000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/alarm_clocks_list_background">

        <ListView
            android:id="@+id/alarm_clocks_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_marginTop="6dp">
        </ListView>

        <Button
            android:id="@+id/add_alarm_clock_button"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="40sp"/>

    </LinearLayout>

</android.gesture.GestureOverlayView>
